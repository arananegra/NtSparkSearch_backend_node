{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es6", "dom"],
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "preserveConstEnums": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "webpack-env",
      "core-js"
    ]
  },
  "include": [
    "./src/"
  ],
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}