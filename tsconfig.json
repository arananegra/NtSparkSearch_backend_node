{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noLib": false,
    "lib": ["es2015", "dom"],
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["webpack-env", "core-js"]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}